<div class="text-center">
  <h1>MultiMedia</h1>
  <% if current_user %>
    <h2><%= link_to 'Add a new picture', '/water_treatments/solutions/multimedia/new' %></h2>
  <% end %>
  <% @multimedias.each do |m| %>
    <div class="images">
      <%= link_to image_tag(m.multimedia_pic.url(:medium)), m.multimedia_pic.url, title: m.multimedia_tag %>
      <h4><%= m.multimedia_tag %></h4>
      <% if current_user %>
        <h4><%= link_to 'DELETE', "/water_treatments/solutions/multimedia/#{m.id}", method: :delete, data: { confirm: 'are you sure?' } %></h4>
      <% end %>
    </div>
  <% end %>
</div>

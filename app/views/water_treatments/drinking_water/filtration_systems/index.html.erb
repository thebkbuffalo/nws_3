<div class="text-center">
  <h1>filtration systems</h1>
  <% if current_user %>
    <h2><%= link_to 'add a new photo', '/water_treatments/drinking_water/filtration_systems/new' %></h2>
  <% end %>
  <% @filtrations.each do |f| %>
    <div class="images">
      <%= link_to image_tag(f.filt_pic.url(:medium)), f.filt_pic.url, title: f.filt_tag %>
      <h4><%= f.filt_tag %></h4>
      <% if current_user %>
        <h4><%= link_to 'DELETE', "/water_treatments/drinking_water/filtration_systems/#{f.id}", method: :delete, data: { confirm: 'are you sure?' } %></h4>
      <% end %>
    </div>
  <% end %>
</div>

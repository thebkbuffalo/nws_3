<!DOCTYPE html>
<html>
<head>
  <title>Nws3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-fixed-top">
    <div class="nav_inner">
      <a href="/"><%= image_tag('nws_logo.png') %></a>
      <div class="nav_links pull-right">
        <a href="#">Videos</a> |
        <a href="#">Photos</a> |
        <a href="#">Good Advice</a> |
        <a href="/blog">Blog</a> |
        <a href="/contact">Contact</a>
        <form class="navbar-form inline" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </nav>


<%= yield %>
  

  <div class="navbar-fixed-bottom">
    <% if current_user %>
      Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>
  </div>
</body>
</html>
